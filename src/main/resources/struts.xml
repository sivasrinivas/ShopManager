<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="default" extends="struts-default" namespace="/">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<!-- default action for index.jsp page -->
		<action name="">
			<result type="tiles">/index.tiles</result>
		</action>
	</package>
	
	<package name="user" extends="struts-default" namespace="/user">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="login">
			<result type="tiles">/user.login.tiles</result>
		</action>
		<action name="Login_*" class="com.sivasrinivas.ShopManager.action.user.LoginAction" method="{1}">
			<result name="success" type="tiles">/user.login.tiles</result>
			<result name="error" type="tiles">//</result>
		</action>
		<action name="Signup_*" class="com.sivasrinivas.ShopManager.action.user.SignupAction" method="{1}">
			<result name="success" type="tiles">/user.login.tiles</result>
			<result name="error" type="tiles">//</result>
		</action>
	</package>
	<!-- Admin related tasks -->
	<package name="admin" extends="struts-default" namespace="/admin">
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="">
			<result type="tiles">/admin.login.tiles</result>
		</action>
		<action name="login">
			<result type="tiles">/admin.login.tiles</result>
		</action>
		<action name="Login_*" class="com.sivasrinivas.ShopManager.action.admin.LoginAction" method="{1}">
			<result name="success">/home.html</result>
			<result name="input" type="tiles">/admin.login.tiles</result>
			<result name="error">/error/error.jsp</result>
		</action>
		<action name="Category_*" class="com.sivasrinivas.ShopManager.action.admin.CategoryAction" method="{1}">
			<result name="addCategorySetup" type="tiles">/admin.category.addsetup.tiles</result>
			<result name="success" type="tiles">/admin.category.addsetup.tiles</result>
		</action>
		<action name="Product_*" class="com.sivasrinivas.ShopManager.action.admin.ProductAction" method="{1}">
			<result name="addProduct" type="tiles">/product.addproduct.tiles</result>
			<result name="insertProduct" type="tiles">/product.addproduct.tiles</result>
		</action>
	</package>

</struts>